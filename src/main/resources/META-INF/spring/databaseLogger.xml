<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="DatabaseLogger"
		class="nl.mindef.c2sc.nbs.olsr.pud.uplink.server.logger.DatabaseLogger"
		destroy-method="destroy">
		<property name="clusterLeaderMsgs" ref="ClusterLeaderMsgs" />
		<property name="databaseLogFile" value="${database.logger.filename}" />
		<property name="senders" ref="Senders" />
		<property name="nodes" ref="Nodes" />
		<property name="positions" ref="PositionUpdateMsgs" />
		<property name="relayServers" ref="RelayServers" />
		<property name="updateIntervalMs" value="${database.logger.updateintervalms}" />
		<property name="generateGraphviz" value="${database.logger.graphviz}" />
		<property name="graphvizSimpleFile" value="${database.logger.graphvizSimpleFile}" />
		<property name="graphvizFile" value="${database.logger.graphvizFile}" />
		<property name="generateSVG" value="${database.logger.svg}" />
		<property name="svgSimpleFile" value="${database.logger.svgSimpleFile}" />
		<property name="svgFile" value="${database.logger.svgFile}" />
	</bean>

</beans>
